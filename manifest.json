{
  "manifest_version": 3,
  "name": "Cute Error Pages",
  "version": "1.0",
  "permissions": ["webRequest", "tabs", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["templates/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
